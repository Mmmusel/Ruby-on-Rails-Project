<div class="blog_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <div>
        <label for="name">Name:</label>
        <%= text_field_tag :name,params[:name] %>
      </div>
      <div>
        <label for="name">Password:</label>
        <%= password_field_tag :password,params[:password] %>
      </div>

      <div>
        <%= submit_tag "login" %>
      </div>
    </fieldset>
  <% end %>
</div>
