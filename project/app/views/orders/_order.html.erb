<div id="<%= dom_id order %>">

  
  <div id="tdpadlinep">
  

  <div id="picp">

  <p>
    <strong>商家名:</strong>
    <%= User.find_by("id",order.business_id).username %>
  </p>
  <p>
    <strong>订单状态:</strong>
    <%= order.order_status %>
  </p>

  <p>
    <strong>订单总价:</strong>
    <%= order.order_sum %>
  </p>
  
    </div>
    
    
    
  <div id="picp">
  <p>
    <strong>收货人姓名:</strong>
    <%= order.order_name %>
  </p>

  <p>
    <strong>收货人地址:</strong>
    <%= order.order_address %>
  </p>

  <p>
    <strong>收货人手机号:</strong>
    <%= order.order_mobile %>
  </p>
    </div>
    
    
     <div id="pic">
     </br>
    <% if current_user.usertype=='user' %>
   
    <% if order.order_status=='未付款' %>
   <%= link_to '确认付款',alterstatus_order_path(order), class: "linkpro",id: "linkpro" %>
   <% end %>
   
   <% if order.order_status=='未发货' %>
   <%= link_to '催发货',orders_path , class: "linkpro",id: "linkpro"%>
   <% end %>
   
   <% if order.order_status=='未收货' %>
   <%= link_to '确认收货',alterstatus_order_path(order), class: "linkpro",id: "linkpro" %>
   <% end %>
   
   
      <% else %>
   
   
    <% if order.order_status=='未付款' %>
   <%= link_to '催付款',orders_path, class: "linkpro",id: "linkpro" %>
   <% end %>
   
   <% if order.order_status=='未发货' %>
   <%= link_to '确认发货',alterstatus_order_path(order), class: "linkpro",id: "linkpro"%>
   <% end %>
   
   <% if order.order_status=='未收货' %>
   <%= link_to '催收货',orders_path, class: "linkpro",id: "linkpro" %>
   <% end %>
   
   
   
   <% end %>
   <% if order.order_status!='已删除并退款' %>
  <%= button_to "订单退款", order, method: :delete , class: "linkpro",id: "linkpro"%>
  <% end %>

   
   
   
   </div>
   
   
   
   
   
    
    
   
      <%= render :partial => order.orderitem %>

 


</div>
